html
  head
    title Encryption/Decryption Demo
    link(href='./stylesheets/style.css', rel='stylesheet')

  body
    h1 Encryption/Decryption Demo

    form(action="/encrypt", method="post")
      label(for="encryptText") Text to Encrypt:
      input(type="text", name="text", id="encryptText")
      button(type="submit") Encrypt

    if originalText
      p Original Text: #{originalText}
    if encryptedText
      p Encrypted Text: #{encryptedText}



    form(action="/decrypt", method="post")
      label(for="decryptText") Text to Decrypt:
      input(type="text", name="text", id="decryptText")
      button(type="submit") Decrypt

    if decryptedText
      p Decrypted Text: #{decryptedText}